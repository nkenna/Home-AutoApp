<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.steinacoz.babymonitor.com.steinacoz.homeAutoApp.MainActivity" android:visibility="visible"
>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_marginTop="0dp"
                android:layout_margin="5dp" android:padding="3dp">
            <TextView
                    android:text="###"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/status_txtView"
                    android:layout_weight="0" tools:text="###" android:visibility="visible"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:gravity="center"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Temperature:"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                        tools:text="Temperature:" android:textAppearance="@android:style/TextAppearance"
                        android:visibility="visible"/>
                <TextView
                        android:text="###"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/temp_txtView" android:layout_weight="1"
                        android:visibility="visible" tools:text="###"
                        android:textAppearance="@android:style/TextAppearance"/>
                <TextView
                        android:text="Humidity:"
                        android:layout_width="13dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance" android:visibility="visible"
                        tools:text="Humidity:"/>
                <TextView
                        android:text="###"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/humid_textView" android:layout_weight="1"
                        android:textAppearance="@android:style/TextAppearance" android:visibility="visible"
                        tools:text="###"/>
            </LinearLayout>
            <WebView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/webView" android:visibility="visible">
            </WebView>
            <TextView
                    android:text="Bedroom Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="0"
                    android:textAppearance="@android:style/TextAppearance" android:visibility="visible"
                    android:gravity="center"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bedroomliteBar" android:layout_weight="0"
                    android:max="100" android:min="0"/>
            <TextView
                    android:text="Sitting Room Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="0"
                    android:textAppearance="@android:style/TextAppearance" android:gravity="center"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/sittingroomBar" android:layout_weight="0"
                    android:max="100" android:min="0"/>
            <TextView
                    android:text="Security Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                    android:textAppearance="@android:style/TextAppearance" android:gravity="center"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/securityliteBar" android:layout_weight="0"
            />
            <TextView
                    android:text="Garage Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="0"
                    android:textAppearance="@android:style/TextAppearance" android:gravity="center"/>
            <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/garageliteBar" android:layout_weight="0"
                    android:max="100" android:min="0"/>
            <Switch
                    android:text="Fan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/fanswitch" android:layout_weight="0"
                    android:textAppearance="@android:style/TextAppearance" android:textOn="Fan ON"
                    android:textOff="Fan OFF"/>
            <Switch
                    android:text="Front Door"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/frontdoorSwitch" android:layout_weight="0"
                    android:textOn="Door Open" android:textOff="Door Close"
                    android:switchTextAppearance="@android:style/TextAppearance" android:width="50dp"/>
            <Switch
                    android:text="Garage Door"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/garagedoorswitch" android:layout_weight="0"
                    android:switchTextAppearance="@android:style/TextAppearance" android:textOn="Door Open"
                    android:textOff="Door CLose" android:width="50dp"/>
            <TextView
                    android:text="Security Mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="0"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:gravity="center"/>
            <ToggleButton
                    android:text="Start Music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/securityModebtn" android:checked="false"
                    tools:text="Start Music" android:visibility="visible"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="0"
                    android:background="?android:attr/textColorHighlightInverse" android:layout_margin="10dp"
                    android:padding="10dp" android:layout_gravity="end">

                <Button
                        android:text="Right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ritebtn"
                        android:layout_alignParentTop="false"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"

                        android:gravity="center_horizontal"
                        android:layout_marginRight="0dp"/>
                <Button
                        android:text="Left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/leftbtn"

                        android:gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
